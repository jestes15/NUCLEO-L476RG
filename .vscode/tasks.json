// Name these taks the way you want
// Configure command in make to use desired amount of threads (now 4)
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build_all",
			"group": "build",
			"type": "shell",
			"command": "make",
			"args": [
				"all",
				"-j4"
			]
		},
		{
			"label": "STflash",
			"group": "build",
			"type": "shell",
			"command": "STM32_Programmer_CLI.exe",
			"args": [
				"-c",
				"port=SWD freq=4000",
				"-w",
				".\\build\\NUCLEO_L476RG.bin",
				"0x08000000"
			],
			"dependsOn": [
				"Build_all"
			]
		}
	]
}